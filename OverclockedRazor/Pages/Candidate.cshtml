@page
@model CandidateModel
@{
    ViewData["Title"] = "Candidate";
}
<main class="container">
    <h2 class="display-4">Candidate Application</h2>
    <p class="lead">Use this form to fill in any and all details you may know about yourself right now. After filling this out, we'll contact you later to talk about your fitness goals.</p>
    <form method="post" class="form" id="CandidateForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mx-auto">
            <div class="small col-lg-6">
                <h3 class="text-center">Basic Information</h3>
                <div class="form-group">
                    <label asp-for="Client.FirstName" class="control-label"></label>
                    <input asp-for="Client.FirstName" class="form-control" placeholder="First Name"/>
                    <span asp-validation-for="Client.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.LastName" class="control-label"></label>
                    <input asp-for="Client.LastName" class="form-control" placeholder="Last Name"/>
                    <span asp-validation-for="Client.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.Email" class="control-label"></label>
                    <input asp-for="Client.Email" class="form-control" placeholder="someone@somewhere.com"/>
                    <span asp-validation-for="Client.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.DOB" class="control-label"></label>
                    <input asp-for="Client.DOB" class="form-control" placeholder="M/D/yyyy"/>
                    <span asp-validation-for="Client.DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.BSex" class="control-label"></label>
                    <p>
                        <select asp-for="Client.BSex" asp-items="Html.GetEnumSelectList<OverclockedRazor.Data.Client.Sex>()" class="form-control"></select>
                    </p>
                    <span asp-validation-for="Client.BSex" class="text-danger"></span>
                </div>
            </div>
            <div class="small col-lg-6">
                <h3 class="text-center">Advanced Information</h3>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Client.Height" class="control-label"></label>
                            <input asp-for="Client.Height" class="form-control" placeholder="XX in." />
                            <span asp-validation-for="Client.Height" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.Weight" class="control-label"></label>
                            <input asp-for="Client.Weight" class="form-control" placeholder="XX lbs." />
                            <span asp-validation-for="Client.Weight" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.Chest" class="control-label"></label>
                            <input asp-for="Client.Chest" class="form-control" placeholder="XX cm" />
                            <span asp-validation-for="Client.Chest" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.Waist" class="control-label"></label>
                            <input asp-for="Client.Waist" class="form-control" placeholder="XX cm" />
                            <span asp-validation-for="Client.Waist" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.Hip" class="control-label"></label>
                            <input asp-for="Client.Hip" class="form-control" placeholder="XX cm" />
                            <span asp-validation-for="Client.Hip" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Client.Forearm" class="control-label"></label>
                            <input asp-for="Client.Forearm" class="form-control" placeholder="XX cm" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.Tricep" class="control-label"></label>
                            <input asp-for="Client.Tricep" class="form-control" placeholder="XX cm" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.Bicep" class="control-label"></label>
                            <input asp-for="Client.Bicep" class="form-control" placeholder="XX cm" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.Thigh" class="control-label"></label>
                            <input asp-for="Client.Thigh" class="form-control" placeholder="XX cm" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Client.Calf" class="control-label"></label>
                            <input asp-for="Client.Calf" class="form-control" placeholder="XX cm" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group text-center">
            <input alt="Submit Application" type="submit" value="Submit Application" class="btn btn-default">
        </div>
    </form>
</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
